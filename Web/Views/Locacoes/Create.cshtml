@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Locacao</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*<div class="form-group">
            <strong><span class="control-label col-md-2" >Informe o CPF do Cliente</span></strong>
            <div class="col-md-10">
                <input type="text" id="txtCpf" name="txtCpf" onblur="buscaAjax();" />
                @Html.EditorFor("cliente.cpf", new { onblur = "buscaAjax();" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Id, "Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdCartaoDeCredito, "IdCartaoDeCredito", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdCartaoDeCredito", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdCartaoDeCredito, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdCarro, "Carro", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdCarro", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdCarro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataRetirada, "Data de Retirada", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("DataRetirada", null, htmlAttributes: new { @class = "form-control", type = "Date" })
                @Html.ValidationMessageFor(model => model.IdCarro, "A data de retirada é obrigatória.", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataDevolucao, "Data de Devolução", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("DataDevolucao", null, htmlAttributes: new { @class = "form-control", type="Date" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Devolvido, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Devolvido)
                    @Html.ValidationMessageFor(model => model.Devolvido, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <p id="erro"></p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
    function buscaAjax() {
        alert( $('#txtCpf').val() );

        $.ajax({
            url: "/Locacoes/BuscaCliente/",
            data: { cpf: $('#txtCpf').val() },
            type: "post",
            dataType: "json",
            beforeSend: function (XMLHttpRequest) {
                $("#IdCartaoDeCredito").empty();
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                $("#erro").empty();
                $("#erro").append("erro");
            },
            success: function (data, textStatus, XMLHttpRequest) {
                $("#resultado").empty();
                $(data).each(function () {
                    $("#IdCartaoDeCredito").append("<option value=" + this.IdCartaoDeCredito + ">" + this.NumeroCartao +"</option>");
                });
            }
        });
    }
</script>