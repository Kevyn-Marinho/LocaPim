@model IEnumerable<Model.Estado>
@{
    ViewBag.Title = "Estados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Novo", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Uf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Uf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdEstado }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdEstado }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdEstado })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
