@model IEnumerable<Model.Contato>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Novo", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoContato.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPessoa)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoContato.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPessoa)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdContato }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdContato }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdContato })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
