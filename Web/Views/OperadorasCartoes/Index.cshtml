@model IEnumerable<Model.OperadoraCartao>

@{
    ViewBag.Title = "Operadoras de Cartões de Crédito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bandeira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bandeira)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdOperadoraCarta }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdOperadoraCarta }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdOperadoraCarta })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
