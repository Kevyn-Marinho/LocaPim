<!DOCTYPE html>
<html>
<head>
    @if (Session["Usuario"] == null)
    {
        Response.Redirect("/Usuarios/Login");
    }


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LocaPim</title>
    @Styles.Render("~/Content/css")

</head>
<body>

<header>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("LocaPim", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Carros<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Categorias", "Index", "CategoriaCarros")</li>
                                <li>@Html.ActionLink("Marcas", "Index", "Marcas")</li>
                                <li>@Html.ActionLink("Modelos", "Index", "ModelosCarros")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Carros", "Index", "Carros")</li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("Locação", "Index", "Locacoes")</li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Outros<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Bandeira CC", "Index", "OperadorasCartoes")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Cargos", "Index", "Cargos")</li>
                                <li>@Html.ActionLink("Setores", "Index", "Setores")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Estados", "Index", "Estados")</li>
                                <li>@Html.ActionLink("Países", "Index", "Paises")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Usuários", "Index", "Usuarios")</li>
                    </ul>    
                    
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Logout", "logout", "Usuarios")</li>
                    </ul>
                    
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </div>
    </nav>  
</header>
               
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LocaPim</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
